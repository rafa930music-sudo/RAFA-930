  <script>

  
    // Modo oscuro/claro con botón y persistencia localStorage
    const modeToggle = document.getElementById('modeToggle');
    const body = document.body;

    function setMode(isLight) {
      if (isLight) {
        body.classList.add('light');
        modeToggle.textContent = 'Modo Oscuro';
        modeToggle.setAttribute('aria-pressed', 'true');
      } else {
        body.classList.remove('light');
        modeToggle.textContent = 'Modo Claro';
        modeToggle.setAttribute('aria-pressed', 'false');
      }
    }

    // Cargar modo guardado o default oscuro
    const savedMode = localStorage.getItem('darkMode');
    if (savedMode === 'false') {
      setMode(true);
    } else {
      setMode(false);
    }

    modeToggle.addEventListener('click', () => {
      const isLight = body.classList.contains('light');
      setMode(!isLight);
      localStorage.setItem('darkMode', !isLight ? 'false' : 'true');
    });

    // Pestañas accesibles y funcionales
    const tabButtons = document.querySelectorAll('[role="tab"]');
    const tabPanels = document.querySelectorAll('[role="tabpanel"]');

    tabButtons.forEach(btn => {
      btn.addEventListener('click', () => { 
        // Desactivar todos
        tabButtons.forEach(b => {
          b.setAttribute('aria-selected', 'false');
          b.setAttribute('tabindex', '-1');
        });
        tabPanels.forEach(p => p.classList.add('hidden'));

        // Activar seleccionado
        btn.setAttribute('aria-selected', 'true');
        btn.setAttribute('tabindex', '0');
        const panel = document.getElementById(btn.getAttribute('aria-controls'));
        panel.classList.remove('hidden');
        panel.focus();
      });

      // Navegación con teclado
      btn.addEventListener('keydown', e => {
        const index = Array.from(tabButtons).indexOf(e.target);
        let nextIndex = null;
        if (e.key === 'ArrowRight') nextIndex = (index + 1) % tabButtons.length;
        if (e.key === 'ArrowLeft') nextIndex = (index - 1 + tabButtons.length) % tabButtons.length;
        if (nextIndex !== null) {
          tabButtons[nextIndex].focus();
          tabButtons[nextIndex].click();
          e.preventDefault();
        }
      });
    });
  </script>
  
  <script>
  const frases = [
    "Rafa 930",
    "Música Urbana",
    "Rap y Trap",
    "Artista Emergente",
    "LA MINA",
    "930",
  ];
  let i = 0;
  const texto = document.getElementById("carousel-text");

  setInterval(() => {
    texto.classList.add("fade-out");
    setTimeout(() => {
      i = (i + 1) % frases.length;
      texto.textContent = frases[i];
      texto.setAttribute("data-text", frases[i]);
      texto.classList.remove("fade-out");
    }, 600);
  }, 3000);
</script>
<script>
  // Aquí va tu código JavaScript
  const tabButtons = document.querySelectorAll('[role="tab"]');
  const tabPanels = document.querySelectorAll('[role="tabpanel"]');

  tabButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      // Desactivar todos
      tabButtons.forEach(b => {
        b.setAttribute('aria-selected', 'false');
        b.setAttribute('tabindex', '-1');
      });
      tabPanels.forEach(p => p.classList.add('hidden'));

      // Activar seleccionado
      btn.setAttribute('aria-selected', 'true');
      btn.setAttribute('tabindex', '0');
      document.getElementById(btn.getAttribute('aria-controls')).classList.remove('hidden');
      btn.focus();
    });

    // Soporte para navegación con teclado (flechas)
    btn.addEventListener('keydown', e => {
      let index = Array.from(tabButtons).indexOf(e.target);
      if (e.key === 'ArrowRight' || e.key === 'ArrowDown') {
        e.preventDefault();
        let nextIndex = (index + 1) % tabButtons.length;
        tabButtons[nextIndex].click();
        tabButtons[nextIndex].focus();
      }
      if (e.key === 'ArrowLeft' || e.key === 'ArrowUp') {
        e.preventDefault();
        let prevIndex = (index - 1 + tabButtons.length) % tabButtons.length;
        tabButtons[prevIndex].click();
        tabButtons[prevIndex].focus();
      }
    });

  });
  tabButtons.forEach((btn, i) => {
  btn.addEventListener('keydown', e => {
    let newIndex;
    if (e.key === 'ArrowRight') {
      newIndex = (i + 1) % tabButtons.length;
      tabButtons[newIndex].focus();
    } else if (e.key === 'ArrowLeft') {
      newIndex = (i - 1 + tabButtons.length) % tabButtons.length;
      tabButtons[newIndex].focus();
    }
  });
});

</script>

